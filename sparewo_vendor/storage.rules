rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow vendors to read/write to their own product images folder
    match /vendors/{vendorId}/products/{fileName} {
      // Anyone can read product images
      allow read: if true;
      
      // Allow authenticated vendors to upload to their own folder
      allow write: if 
        // File upload with auth - mobile path
        (request.auth != null && 
         request.auth.uid == vendorId) || 
        // Web uploads - check metadata
        (request.resource != null && 
         request.resource.metadata != null && 
         request.resource.metadata.vendorId == vendorId);
    }
    
    // Allow admin read/write anywhere
    match /{allPaths=**} {
      allow read, write: if 
        request.auth != null && 
        exists(/databases/(default)/documents/user_roles/$(request.auth.uid)) &&
        get(/databases/(default)/documents/user_roles/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}