# ios/Podfile
platform :ios, '17.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'
require 'fileutils'

project 'Runner', {
  'Debug'   => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Read FLUTTER_ROOT from ios/Flutter/Generated.xcconfig
def flutter_root
  generated = File.expand_path(File.join(__dir__, 'Flutter', 'Generated.xcconfig'))
  raise "#{generated} missing. Run `flutter pub get` first." unless File.exist?(generated)
  File.foreach(generated) do |line|
    m = line.match(/FLUTTER_ROOT=(.*)/)
    return m[1].strip if m
  end
  raise "FLUTTER_ROOT not found in #{generated}. Run `flutter pub get`."
end

# Correct helper inside your Flutter SDK
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  # âœ… Call the helper for EACH target (NOT the installer)
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    # Enforce iOS 17+ on every Pod config
    target.build_configurations.each do |bc|
      bc.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '17.0'
      if target.name == 'gRPC-Core'
        bc.build_settings['MODULEMAP_FILE'] = 'Target Support Files/gRPC-Core/gRPC-Core.modulemap'
      end
    end
  end

  # --- FIX FOR XCODE 14.3+ / 15+ ARCHIVE ERROR (realpath issue) ---
  installer.generated_projects.each do |project|
    project.targets.each do |target|
      target.build_phases.each do |phase|
        if phase.is_a?(Xcodeproj::Project::Object::PBXShellScriptBuildPhase)
          phase.shell_script.gsub!(
            'source="$(readlink "${source}")"',
            'source="$(readlink -f "${source}")"'
          )
        end
      end
    end
  end

  # gRPC modulemap location workaround:
  # Some CocoaPods/Xcode combinations reference Headers/Private/grpc/gRPC-Core.modulemap
  # even when CocoaPods only generates Target Support Files/gRPC-Core/gRPC-Core.modulemap.
  grpc_old_ref = 'Headers/Private/grpc/gRPC-Core.modulemap'
  grpc_new_ref = 'Target Support Files/gRPC-Core/gRPC-Core.modulemap'

  # Rewrite generated xcconfigs that still point to the old gRPC modulemap location.
  Dir.glob(File.join(__dir__, 'Pods', 'Target Support Files', '**', '*.xcconfig')).each do |xcconfig|
    content = File.read(xcconfig)
    next unless content.include?(grpc_old_ref)
    File.write(xcconfig, content.gsub(grpc_old_ref, grpc_new_ref))
  end

  # Also rewrite remaining generated references for safety.
  pods_pbxproj = File.join(__dir__, 'Pods', 'Pods.xcodeproj', 'project.pbxproj')
  if File.exist?(pods_pbxproj)
    pbxproj = File.read(pods_pbxproj)
    File.write(pods_pbxproj, pbxproj.gsub(grpc_old_ref, grpc_new_ref)) if pbxproj.include?(grpc_old_ref)
  end
  # ----------------------------------------------------------------
end
